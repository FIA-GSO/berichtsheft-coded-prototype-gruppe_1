doctype html
html(lang="en")
  head
    title=Prototype
    link(rel='stylesheet', type='text/css', href='main.css')
    link(href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet')
  body
    .fullPage
      .wrapper.headNav()
        .statusBox
          .headNavboxTitle Status
          .statusDropDown
            label(for="status")
            select(name="Status")
              option(value="all") Alle
              option(value="accepted") Angenommen
              option(value="declined") Abgelehnt
              option(value="open") Offen
        .calenderBox
          .headNavboxTitle Kalender
          .datepicker
            input(type="date")
        .reminderBox
          .headNavboxTitle Erinnerung
          .remiderState
            .svg
              svg(width="2vW", height="2vH", viewBox="0 0 100 100", xmlns="http://www.w3.org/2000/svg")
                circle(cx="50", cy="50", r="45", fill="white", stroke="#333", stroke-width="3")
                circle(cx="50", cy="50", r="3", fill="#333")
                g(transform-origin="50 50")
                  line(x1="50", y1="50", x2="50", y2="30", stroke="black", stroke-width="4", stroke-linecap="round", transform="rotate(305 50 50)")
                  line(x1="50", y1="50", x2="50", y2="20", stroke="black", stroke-width="3", stroke-linecap="round", transform="rotate(60 50 50)")
            .reminderInfoWrapper
              .reminderStateInText Tägliche Erinnerung
              .remiderStateInTime 12:00 Uhr Heute
          button.editReminder Bearbeiten
            svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="rgb(239, 217, 19)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
              path(d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7")
              path(d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z")

